   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-border-width: 2; -fx-border-color: #2e8b57;" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="loginField" layoutX="45.0" layoutY="138.0" prefHeight="30.0" prefWidth="250.0" promptText="login" />
            <PasswordField fx:id="passwordField" layoutX="45.0" layoutY="197.0" prefHeight="30.0" prefWidth="250.0" promptText="haslo" />
            <Text layoutX="45.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="System rezerwacji sal">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
            <Button layoutX="333.0" layoutY="197.0" mnemonicParsing="false" onAction="#loginButton" prefHeight="30.0" prefWidth="130.0" text="Loguj" />
            <Button layoutX="333.0" layoutY="244.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="30.0" prefWidth="130.0" text="Stwórz nowe konto" />
            <Box layoutX="110.0" layoutY="45.0" />
