               <font>
                  <Font size="14.0" />
               </font>
            </Text>
         </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </Pane>
   </center>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
